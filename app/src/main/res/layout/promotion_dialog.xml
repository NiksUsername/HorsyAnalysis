<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/small_corners_gray">


    <TextView
        android:layout_margin="10sp"
        android:id="@+id/promote_to_queen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dialog_chess"
        android:layout_weight="0"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:text="Q" />

    <TextView
        android:layout_margin="10sp"
        android:id="@+id/promote_to_rook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dialog_chess"
        android:layout_weight="0"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:text="R" />

    <TextView
        android:layout_margin="10sp"
        android:id="@+id/promote_to_bishop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:fontFamily="@font/dialog_chess"
        android:text="B" />

    <TextView
        android:layout_margin="10sp"
        android:id="@+id/promote_to_knight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:fontFamily="@font/dialog_chess"
        android:text="N" />
</LinearLayout>